{{#each error}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar postagem: </h4>
        <form action="/admin/postagem/edit" method="post">
            <input type="hidden" id="cat" value="{{postagens.categoria}}">
            <input type="hidden" value="{{postagens._id}}" name="id">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" value="{{postagens.titulo}}">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{postagens.slug}}">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{postagens.descricao}}">
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control">{{postagens.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" id="select" class="form-select">
                {{#each categoria}}
                    <option class="option" value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-3" type="submit">Editar postagem</button>
        </form>
        <script>
            let cat = document.querySelector('#cat')
            let sel = document.querySelector('#select').value = cat.value
        </script>
    </div>
</div>